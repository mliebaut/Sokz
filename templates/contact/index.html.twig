{% extends 'base.html.twig' %}

{% block title %}Contact index{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center mb-4">Contact Index</h1>

        <table class="table table-striped table-hover shadow-lg">
            <thead class="table-dark">
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Email</th>
                <th>Content</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for contact in contacts %}
                <tr>
                    <td>{{ contact.id }}</td>
                    <td>{{ contact.Name }}</td>
                    <td>{{ contact.email }}</td>
                    <td>{{ contact.content }}</td>
                    <td>
                        <a href="{{ path('app_contact_show', {'id': contact.id}) }}" class="btn btn-info btn-sm">Show</a>
                        <a href="{{ path('app_contact_edit', {'id': contact.id}) }}" class="btn btn-warning btn-sm">Edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5" class="text-center">No records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="text-center mt-4">
            <a href="{{ path('app_contact_new') }}" class="btn btn-success">Create New</a>
        </div>
    </div>
{% endblock %}
