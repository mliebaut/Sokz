{# templates/security/forgot_password.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Forgot Password{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .login-container {
            max-width: 400px;
            margin: 40px auto;
        }
        .logo-circle {
            width: 60px;
            height: 60px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 15px;
        }
        .logo-circle img {
            width: 60px;
            height: 60px;
            fill: white;
        }
        .form-control {
            border-radius: 25px;
            background-color: #f0faf9;
            border: none;
            padding: 12px 15px 12px 40px;
        }
        .input-group-text {
            position: absolute;
            z-index: 10;
            background: none;
            border: none;
            color: #9ca3af;
            padding-left: 15px;
        }
        .btn-login {
            background-color: #2cd3c1;
            border: none;
            border-radius: 25px;
            padding: 12px;
            width: 100%;
        }
        .form-group {
            position: relative;
            margin-bottom: 1rem;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container">
        <div class="login-container">
            <div class="text-center mb-4">
                <div class="logo-circle">
                    <img src="{{ asset('images/logo.png') }}" alt="Symfony!"/>
                </div>
                <h5>Forgot Password</h5>
            </div>

            {% if emailSent %}
                <div class="alert alert-success">
                    If an account exists with this email address, you will receive password reset instructions.
                </div>
            {% endif %}

            <form method="post">
                <div class="form-group">
                    <span class="input-group-text">
                        <i class="bi bi-envelope"></i>
                    </span>
                    <input type="email" name="email" id="email" 
                           class="form-control" placeholder="Enter your email" 
                           required autofocus>
                </div>

                <button class="btn btn-primary btn-login mb-3" type="submit">
                    Send Reset Link
                </button>

                <div class="text-end">
                    <a href="{{ path('app_login') }}" class="text-muted text-decoration-none small">
                        Back to login
                    </a>
                </div>
            </form>
        </div>
    </div>
{% endblock %}